# Setup environment
export TESTCASE="F003"
export TEST_DESCRIPTION="Does not delete current data"
export TEST_PATH=__WDB_BUILDDIR__/test/install/cleaningProgram

# Test Environment
source $TEST_PATH/testEnvironment.sh

# Parse command line
case $1 in
    --help) 
    echo "$SCRIPT_USAGE"; exit 0;;
    --version) 
    echo "$0 $SCRIPT_VERSION"; exit 0;;
    --xml)
		XML_OPT="-x";;
    -x)
		XML_OPT="-x";;
esac

# Timing
startTime=`date +%s%N`
# Parse command line
case $1 in
    --help) 
    echo "$SCRIPT_USAGE"; exit 0;;
    --version) 
    echo "$0 $SCRIPT_VERSION"; exit 0;;
esac

# Calculate Test time
TESTTIME=$(date +%FT%R:%S)

# Clean out database
source $TEST_PATH/tearDown.sh

# Generate Test Data
${TESTWRITE_PATH}/testWrite --dataprovider 'test cleandb' --reftime ${TESTTIME}
if ! $PSQL -Atc "SELECT count(*) FROM test.gridvalue WHERE dataprovidername='test cleandb'" | grep -qE "1"
then
	endTime=`date +%s%N`
	totalTime=$(echo "scale = 3; ($endTime-$startTime)/1000000000" | bc -l)
	if test "$XML_OPT" = "-x"; then
    	echo -e "<testcase name=\"`basename $0` $TEST_DESCRIPTION\" time=\"$totalTime\">\n\t<failure message=\"Data was not inserted for test\">\n\t</failure>\n</testcase>"
	else
    	echo -e "not ok $1 - `basename $0`\t$TEST_DESCRIPTION (data was not inserted)"
	fi
    source $TEST_PATH/tearDown.sh
    exit 1
fi

# Run Cleaner
$PSQL -q <<EOF
\o __WDB_LOGDIR__/$TESTCASE_FILE.tmp
select cleanupDb();
EOF

# Check Result
# - Expected Result: Data should not be deleted
if ! $PSQL -Atc "SELECT count(*) FROM test.gridvalue WHERE dataprovidername='test cleandb'" | grep -qE "1"
then
	endTime=`date +%s%N`
	totalTime=$(echo "scale = 3; ($endTime-$startTime)/1000000000" | bc -l)
	if test "$XML_OPT" = "-x"; then
    	echo -e "<testcase name=\"`basename $0` $TEST_DESCRIPTION\" time=\"$totalTime\">\n\t<failure message=\"Current data appears to have been deleted\">\n\t</failure>\n</testcase>"
	else
    	echo -e "not ok $1 - `basename $0`\t$TEST_DESCRIPTION"
	fi
    source $TEST_PATH/tearDown.sh
    exit 1
fi

# Clean Up and Exit
source $TEST_PATH/tearDown.sh
endTime=`date +%s%N`
totalTime=$(echo "scale = 3; ($endTime-$startTime)/1000000000" | bc -l)
if test "$XML_OPT" = "-x"; then
	echo -e "<testcase name=\"`basename $0` $TEST_DESCRIPTION\" time=\"$totalTime\">\n</testcase>"
else
	echo -e "ok $1 - `basename $0`\t$TEST_DESCRIPTION"
fi
